@model DACS.Models.Course

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: green;">SỬA KHÓA HỌC</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
