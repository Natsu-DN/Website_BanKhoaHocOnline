
@{
    ViewBag.Title = "CourseFree4";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .video-container {
            float: left;
            width: 60%;
        }

        .content-container {
            float: left;
            width: 40%;
        }

        .list-container {
            background: #fedebe;
            margin-top: 50px;
        }

        ul {
            list-style-type: none;
        }

        ul.tree ul {
            display: none;
        }

        ul.tree li {
            cursor: pointer;
        }

        ul.tree li::before {
            content: "•";
            display: inline-block;
            margin-right: 5px;
        }

        ul.tree li.open::before {
            content: "-";
        }

        .bottom-section {
            background-color: #ffffff;
            padding: 20px;
            clear: both;
        }
    </style>
</head>
<body>
    <div class="top-section">
        <div class="video-container">
            <div class="video">
                <h2>Lập trình IoT</h2>
                <!-- Thêm mã HTML/video player ở đây -->
